@model StudentTestingSystem.Services.TransportModels.Admin.Subject.Response.SubjectResponse
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card ">
            <div class="card-header ">
                <h5 class="card-title">@ViewBag.Title</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-2">Title</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.Title)</dd>

                    @if (Model.UserProfileId != null)
                    {
                        <dt class="col-sm-2">Author</dt>
                        <dd class="col-sm-10">@Html.DisplayFor(model => model.UserName)</dd>
                    }

                    <dt class="col-sm-2">Themes</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.ThemesCount)</dd>
                </dl>

                @Html.ActionLink("Edit subject", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Themes", "Index", "Theme", new { subjectId = Model.Id }, new { @class = "btn btn-success" })
            </div>
            <div class="card-footer ">
                <hr>
                <div class="stats">
                    <i class="fas fa-chevron-left"></i> @Html.ActionLink("Back to list of subjects", "Index")<br>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $("#subjectMenuItem").addClass("active");
</script>