@model List<StudentTestingSystem.Areas.Admin.Models.Breadcrumb>

<nav aria-label="breadcrumb" role="navigation">
    <ol class="breadcrumb">
        @for (int i = 0; i < Model.Count; i++)
        {
            if (i + 1 == Model.Count)
            {
                if (Model[i].Action == null)
                {
                    <li class="breadcrumb-item active" aria-current="page">@Model[i].Title</li>
                }
                else
                {
                    <li class="breadcrumb-item active" aria-current="page">@Html.ActionLink(Model[i].Title, Model[i].Action, Model[i].Controller, Model[i].RouteValues, null)</li>
                }
            }
            else
            {
                if (Model[i].Action == null)
                {
                    <li class="breadcrumb-item"><a href="#">@Model[i].Title</a></li>
                }
                else
                {
                    <li class="breadcrumb-item">@Html.ActionLink(Model[i].Title, Model[i].Action, Model[i].Controller, Model[i].RouteValues, null)</li>
                }
            }
        }
    </ol>
</nav>